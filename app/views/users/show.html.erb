<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.chapitres.any? %>
      <h3>Chapitres (<%= @user.chapitres.count %>)</h3>
      <ol class="chapitres">
        <%= render @chapitres %>
      </ol>
      <%= will_paginate @chapitres %>
    <% end %>
  </div>
  <div class="span8">
    <% if @user.anecdotes.any? %>
      <h3>Anecdotes (<%= @user.anecdotes.count %>)</h3>
      <ol class="anecdotes">
        <%= render @anecdotes %>
      </ol>
      <%= will_paginate @anecdotes %>
    <% end %>
  </div>
  <div class="span8">
    <% if @user.personnes.any? %>
      <h3>Personnes (<%= @user.personnes.count %>)</h3>
      <ol class="personnes">
        <%= render @personnes %>
      </ol>
      <%= will_paginate @personnes %>
    <% end %>
  </div>
  <div class="span8">
    <% if @user.scenes.any? %>
      <h3>Scenes (<%= @user.scenes.count %>)</h3>
      <ol class="scenes">
        <%= render @scenes %>
      </ol>
      <%= will_paginate @scenes %>
    <% end %>
  </div>
</div>
